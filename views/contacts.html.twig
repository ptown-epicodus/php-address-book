<!DOCTYPE html>
<html>
    <head>
        <link href='css/bootstrap.min.css' rel='stylesheet' type='text/css'>
        <link href='css/styles.css' rel='stylesheet' type='text/css'>
        <title>Address book</title>
    </head>
    <body>
        <div class='container'>
            <div class='row'>
                <div class='jumbotron'>
                    <h1>Address Book</h1>
                </div>
                {% if contacts is not empty %}
                    <div class='panel panel-info'>
                        <div class='panel-heading'>
                            <h1 class='panel-title'>Your contacts</h1>
                        </div>
                        <div class='panel-body'>
                            <ul>
                                {% for contact in contacts %}
                                    <li>{{ contact.getName }}
                                        <ul>
                                            <li>{{ contact.getPhone }}</li>
                                            <li>{{ contact.getAddress }}</li>
                                        </ul>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% else %}
                    <h3>Your address book is empty.</h3>
                {% endif %}

                <div class='panel panel-warning'>
                    <div class='panel-heading'>
                        <h1 class='panel-title'>Create new entry<h1>
                    </div>
                    <div class='panel-body'>
                        <form action='/create_contact' method='post'>
                            <div class='form-group'>
                                <label for='name'>Name:</label>
                                <input id='name' name='name' type='text' class='form-control'>
                            </div>
                            <div class='form-group'>
                                <label for='phone'>Phone:</label>
                                <input id='phone' name='phone' type='text' class='form-control'>
                            </div>
                            <div class='form-group'>
                                <label for='address'>Address:</label>
                                <input id='address' name='address' type='text'  class='form-control'>
                            </div>

                            <button type='submit' class='btn btn-info form-control'>Add contact</button>
                        </form>
                    </div>
                </div>

                <form action='/delete_contacts' method='post'>
                    <button type='submit' class='btn btn-danger'>Clear address book</button>
                </form>
            </div>
        </div>
    </body>
</html>
